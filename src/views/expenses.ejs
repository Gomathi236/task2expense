<html>
    <head>
        <title>INCOME</title>
        <link rel="stylesheet" href="/public/css/income.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        
    </head>
    
    <body>
        <h1>EXPENSES</h1><br/>
        <table>
        <form method="POST" action="/expenses" class="form">
           <tr> 
              <td> 
                  <label for="date"><b>Date :</b></label><br/>
                </td>
              <td> 
                   <input type="date" id="date" name="date" class="input-field">
                </td>
            </tr>
            <br/>
            <tr>
                <td>
                    <label><b>Category :</b></label><br/>
                </td>
                <td>
                    <input type="text" class="input-field" name="Category" id="Category" 
                    <% expenses.forEach(function (expenses) { %>
                          
                        placeholder = "<%= expenses.name %>,<%= expenses.budget%>"
                        
                                                    
                 <% }) %> >
                    
                   &nbsp; &nbsp;&nbsp;<a href="/category"> <i class="fa fa-plus" id="add" style="font-size:24px"></i></a>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="description"><b>Description :</b></label><br/>
                </td>
                <td>
                    <textarea class="input-field" name="description"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="amount"><b>Enter the Amount :</b></label><br/>
                </td>
                <td>
                    <input type="number" id="amount" name="amount" class="input-field" >
                </td>
            </tr>
            <tr>
                <td>
                    <button type="submit" class="btn" formaction="/category">Save</button>

                </td>

            </tr>
        </form>
        <tr>
            <td>
                <a href="/home"><button class="btn">Cancel</button></a>
    
            </td>

        </tr>
       
        </table>
       
    </body>
</html>
